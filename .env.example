# Database & Server
DEBUG=true
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=opengraph_db
DATABASE_USER=opengraph_user
DATABASE_PASSWORD=opengraph_password

# CLIENT_URL: Frontend URL (Different for each environment)
# - Local development: http://localhost:5173
# - Docker local: http://localhost
# - Production: https://production-url.com
CLIENT_URL=http://localhost

# SERVER_URL: Backend API URL
# - Local development: http://localhost:8000
# - Docker local: http://localhost:8000
# - Production: https://production-api-url.com
SERVER_URL=http://localhost:8000

ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

JWT_SECRET_KEY=development-secret-key-change-in-production-12345678901234567890
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=3

GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret
# GOOGLE_REDIRECT_URI is automatically generated from SERVER_URL
# ALLOWED_ORIGINS is automatically generated from CLIENT_URL

APP_NAME=OpenGraph

GOOGLE_APPLICATION_CREDENTIALS=google-application-credentials
GOOGLE_CLOUD_PROJECT=google-cloud-project
GCS_BUCKET_NAME=gcs-bucket-name

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Frontend
VITE_SERVER_BASE_URL=http://localhost:8000
VITE_APP_BUILDING_MODE=false
