# URLs Configuration
# CLIENT_URL: Frontend URL (e.g., http://localhost:5173 for local dev, http://localhost for docker, https://yourdomain.com for production)
CLIENT_URL=http://localhost:5173
# SERVER_URL: Backend API URL (e.g., http://localhost:8000 for local dev, https://api.yourdomain.com for production)
SERVER_URL=http://localhost:8000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=opengraph
DATABASE_USER=opengraph_user
DATABASE_PASSWORD=opengraph_pw

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
# GOOGLE_REDIRECT_URI is automatically generated from SERVER_URL
# ALLOWED_ORIGINS is automatically generated from CLIENT_URL

# zkLogin Configuration
ZKLOGIN_PROVER_URL=https://prover-dev.mystenlabs.com/v1
ZKLOGIN_SALT_SERVICE=https://salt.api.mystenlabs.com/get_salt

# Application Settings
DEBUG=true
APP_NAME=OpenGraph API
APP_VERSION=0.1.0

# Google Cloud Storage Configuration
GOOGLE_APPLICATION_CREDENTIALS=application-credentials
GOOGLE_CLOUD_PROJECT=project
GCS_BUCKET_NAME=bucket-name